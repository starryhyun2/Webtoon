<?xml version="1.0" encoding="UTF-8"?>
<!-- DTD지정  -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.korea.mappers.UserMapper">
	<select id="getTime" resultType="string">
		select now()
	</select>

	<!-- values(?,?,?,?) sql문법 대신에 Mybatis 문법#{}을 사용
	 get() 또는 set() 마이바티스가 결정해서 메서드실행-->
	<insert id="insertUser">
		insert into WEBTOON_USER(USER_IDX,ID,PWD,NAME,MAIL) 
      values (1,#{ID},#{PWD},#{Name},#{MAIL})
	</insert>

	<select id="readUser" resultType="vo.UserVO">
		select *
		from WEBTOON_USER
		where ID=#{ID}
	</select>

	<select id="readUserWithIDPW" resultType="vo.UserVO">
		select *
		from WEBTOON_USER
		where ID=#{ID} and PWD=#{PWD}
	</select>	

</mapper>